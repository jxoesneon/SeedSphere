{
  // markdownlint-cli2 configuration
  // Use repo-local rules and ignores to reduce false positives in templates/docs
  "globs": [
    "**/*.md"
  ],
  "ignores": [
    "backup/**",
    "node_modules/**",
    "dist/**"
  ],
  "config": {
    "MD013": false,
    "MD033": false,
    "MD041": false,
    "MD024": { "allow_different_nesting": true },
    "MD025": false,
    "MD040": false
  }
}
